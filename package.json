{
  "name": "@nx-template/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "dev": "npx nx run-many -t serve -p web api",
    "dev:web": "npx nx serve web",
    "dev:api": "npx nx serve api",
    "build": "npx nx run-many -t build",
    "build:web": "npx nx build web",
    "build:api": "npx nx build api",
    "test": "npx nx run-many -t test",
    "lint": "npx nx run-many -t lint",
    "format:all": "prettier --write .",
    "format:check": "prettier --check .",
    "nx:graph": "npx nx graph",
    "nx:reset:cache": "npx nx reset",
    "prepare": "husky"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@nx/devkit": "21.6.4",
    "@nx/esbuild": "21.6.4",
    "@nx/express": "^21.6.4",
    "@nx/js": "21.6.4",
    "@nx/next": "^21.6.4",
    "@nx/node": "^21.6.4",
    "@nx/playwright": "21.6.4",
    "@nx/react": "^21.6.4",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "20.19.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "nx": "21.6.4",
    "prettier": "^2.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "verdaccio": "^6.0.5"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "@redis/client": "^1.6.0",
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^5.5.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.1",
    "mongoose": "^8.19.1",
    "next": "~15.2.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-mongodb": "^7.0.1",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  }
}
